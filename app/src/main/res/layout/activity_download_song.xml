<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DownloadSong">



    <ImageView
        android:id="@+id/download_avatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"

        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_below="@id/download_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/download_song_name"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        />



    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_song_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="130dp"

        android:padding="15dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#8E0808"
android:layout_centerHorizontal="true"
        android:text="Download" />



    <Button
        android:id="@+id/btn_download_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_song_name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#8E0808"
        android:visibility="gone"
        android:text="Edit" />

<!--    <Button-->
<!--        android:id="@+id/btn_download_cancel"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/download_song_name"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:layout_marginLeft="280dp"-->
<!--        android:layout_marginTop="80dp"-->
<!--        android:backgroundTint="#0C1B6A"-->
<!--android:padding="6dp"-->
<!--        android:text="CANCEL" />-->


    <ImageView
        android:id="@+id/downloadLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"

        android:background="@color/black"
        app:tint="#AA1616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_below="@id/download_song_name"
        app:srcCompat="@drawable/ic_baseline_download_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/black"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>